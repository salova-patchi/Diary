@model DiaryApp.Models.DiaryEntry

@{
    ViewData["Title"] = "Diary Entry";
    var moodEmoji = Model.Mood switch
    {
        DiaryApp.Models.Mood.Happy => "😊",
        DiaryApp.Models.Mood.Sad => "😢",
        DiaryApp.Models.Mood.Excited => "🤩",
        DiaryApp.Models.Mood.Calm => "😌",
        DiaryApp.Models.Mood.Anxious => "😰",
        DiaryApp.Models.Mood.Grateful => "🙏",
        _ => "😊"
    };
}

<style>
    .details-container {
        max-width: 900px;
        margin: 0 auto;
        animation: fadeIn 0.8s ease-out;
        margin-bottom: 60px;
        padding-bottom: 40px;
    }

    .entry-header-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 25px;
        padding: 50px;
        color: white;
        margin-bottom: 30px;
        box-shadow: 0 20px 60px rgba(102, 126, 234, 0.4);
        position: relative;
        overflow: hidden;
        animation: slideInDown 0.8s ease-out;
    }

        .entry-header-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: rotate 20s linear infinite;
        }

    .header-content {
        position: relative;
        z-index: 1;
    }

    .entry-title-large {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        line-height: 1.3;
    }

    .entry-meta {
        display: flex;
        gap: 30px;
        flex-wrap: wrap;
        align-items: center;
        font-size: 1.1rem;
        opacity: 0.95;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .meta-item i {
            font-size: 1.3rem;
        }

    .mood-badge {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        padding: 12px 25px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.2rem;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

    .mood-emoji-large {
        font-size: 2rem;
        animation: bounce 2s infinite;
    }

    .content-card {
        background: white;
        border-radius: 25px;
        padding: 50px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        animation: fadeInUp 1s ease-out;
        line-height: 2;
        font-size: 1.1rem;
        color: #333;
    }

        .content-card p {
            margin-bottom: 20px;
            text-align: justify;
        }

    .content-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 50%;
        font-size: 1.8rem;
        margin-bottom: 25px;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 20px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        animation: fadeInUp 1s ease-out;
    }

        .stat-card:nth-child(1) {
            animation-delay: 0.2s;
        }

        .stat-card:nth-child(2) {
            animation-delay: 0.3s;
        }

        .stat-card:nth-child(3) {
            animation-delay: 0.4s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(102, 126, 234, 0.2);
        }

    .stat-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
    }

    .stat-label {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .stat-value {
        color: #333;
        font-size: 1.3rem;
        font-weight: 600;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
        animation: fadeIn 1.2s ease-out;
    }

    .btn {
        padding: 15px 35px;
        border: none;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

    .btn-edit {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        box-shadow: 0 10px 30px rgba(240, 147, 251, 0.3);
    }

        .btn-edit:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(240, 147, 251, 0.5);
            color: white;
        }

    .btn-delete {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        color: white;
        box-shadow: 0 10px 30px rgba(255, 107, 107, 0.3);
    }

        .btn-delete:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(255, 107, 107, 0.5);
            color: white;
        }

    .btn-back {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

        .btn-back:hover {
            background: #667eea;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }

    .quote-decoration {
        background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
        border-radius: 20px;
        padding: 30px;
        margin: 30px 0;
        position: relative;
        box-shadow: 0 10px 30px rgba(168, 237, 234, 0.3);
    }

        .quote-decoration::before {
            content: '"';
            position: absolute;
            top: -10px;
            left: 20px;
            font-size: 6rem;
            color: rgba(102, 126, 234, 0.2);
            font-family: Georgia, serif;
        }

    .quote-text {
        font-style: italic;
        color: #2d3436;
        font-size: 1.2rem;
        line-height: 1.8;
        padding-left: 40px;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes bounce {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }
    }

    @@keyframes rotate {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    @@media (max-width: 768px) {
        .entry-header-card {
            padding: 30px 20px;
        }

        .entry-title-large {
            font-size: 1.8rem;
        }

        .content-card {
            padding: 30px 20px;
        }

        .entry-meta {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .stats-row {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="details-container">
    <!-- Header Card -->
    <div class="entry-header-card">
        <div class="header-content">
            <h1 class="entry-title-large">@Model.Title</h1>
            <div class="entry-meta">
                <div class="meta-item">
                    <i class="fas fa-calendar-alt"></i>
                    <span>@Model.Created.ToString("MMMM dd, yyyy")</span>
                </div>
                <div class="meta-item">
                    <i class="fas fa-clock"></i>
                    <span>@Model.Created.ToString("hh:mm tt")</span>
                </div>
                <div class="mood-badge">
                    <span class="mood-emoji-large">@moodEmoji</span>
                    <span>@Model.Mood.ToString()</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-icon">📝</div>
            <div class="stat-label">Word Count</div>
            <div class="stat-value">@(Model.Description?.Split(' ', StringSplitOptions.RemoveEmptyEntries).Length ?? 0)</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">🔤</div>
            <div class="stat-label">Characters</div>
            <div class="stat-value">@(Model.Description?.Length ?? 0)</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">⏱️</div>
            <div class="stat-label">Reading Time</div>
            <div class="stat-value">@(Math.Ceiling((Model.Description?.Split(' ', StringSplitOptions.RemoveEmptyEntries).Length ?? 0) / 200.0)) min</div>
        </div>
    </div>

    <!-- Content Card -->
    <div class="content-card">
        <div class="content-icon">
            <i class="fas fa-book-open"></i>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            @foreach (var paragraph in Model.Description.Split(new[] { "\r\n", "\r", "\n" }, StringSplitOptions.RemoveEmptyEntries))
            {
                <p>@paragraph</p>
            }
        }
        else
        {
            <p><em>No content available</em></p>
        }

        <!-- Quote Decoration -->
        <div class="quote-decoration">
            <div class="quote-text">
                Every diary entry is a step in your personal journey. Keep writing, keep growing! 🌱
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit">
            <i class="fas fa-edit"></i>
            Edit Entry
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this entry?');">
            <i class="fas fa-trash-alt"></i>
            Delete Entry
        </a>
        <a asp-action="Index" class="btn btn-back">
            <i class="fas fa-arrow-left"></i>
            Back to Entries
        </a>
    </div>
</div>